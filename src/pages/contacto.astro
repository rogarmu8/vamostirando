<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>Contacto - Vamos Tirando</title>
		<meta name="description" content="Contacta con el equipo de Vamos Tirando - Ordago Films" />
		<style>
			@font-face {
				font-family: 'Owned';
				src: url('/fonts/owned.ttf') format('truetype');
				font-weight: normal;
				font-style: normal;
			}

			@font-face {
				font-family: 'SpriteGraffiti';
				src: url('/fonts/Sprite Graffiti.otf') format('opentype');
				font-weight: normal;
				font-style: normal;
			}

			@font-face {
				font-family: 'Lacquer';
				src: url('/fonts/Lacquer-Regular.ttf') format('truetype');
				font-weight: normal;
				font-style: normal;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: 'Lacquer', sans-serif;
				background: #000;
				color: white;
				overflow-x: hidden;
			}

			/* Navigation */
			.nav {
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				z-index: 1000;
				background: rgba(0, 0, 0, 0.9);
				backdrop-filter: blur(10px);
				padding: 1rem 0;
				transition: all 0.3s ease;
			}

			.nav.hidden {
				transform: translateY(-100%);
			}

			.nav-container {
				max-width: 1200px;
				margin: 0 auto;
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 0 2rem;
			}

			.logo {
				font-family: 'SpriteGraffiti', sans-serif;
				font-size: 1.5rem;
				color: #f2b705;
				text-decoration: none;
			}

			.nav-links {
				display: flex;
				gap: 2rem;
				list-style: none;
			}

			.nav-links a {
				color: white;
				text-decoration: none;
				font-size: 1rem;
				transition: color 0.3s ease;
			}

			.nav-links a:hover {
				color: #f2b705;
			}

			/* Main Content */
			.main {
				padding-top: 80px;
			}

			/* Hero Section */
			.hero {
				height: 20vh;
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				text-align: center;
				position: relative;
				overflow: hidden;
			}

			.hero::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				opacity: 0.2;
				z-index: -1;
			}

			.section-title {
				font-family: 'SpriteGraffiti', sans-serif;
				font-size: 4rem;
				color: #f2b705;
				margin-bottom: 1rem;
				text-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
			}

			.section-subtitle {
				font-size: 1.2rem;
				opacity: 0.8;
				max-width: 600px;
				line-height: 1.6;
			}

			/* Contact Section */
			.contact-section {
				padding: 5rem 2rem;
			}

			.contact-container {
				max-width: 800px;
				margin: 0 auto;
			}

			.contact-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: start;
			}

			.contact-info {
				background: #000;
				padding: 2rem;
				border-radius: 10px;
				border: 1px solid #333;
			}

			.contact-info h3 {
				font-family: 'SpriteGraffiti', sans-serif;
				font-size: 1.8rem;
				color: #f2b705;
				margin-bottom: 1.5rem;
			}

			.contact-item {
				margin-bottom: 1.5rem;
				display: flex;
				align-items: center;
				gap: 1rem;
			}

			.contact-item-icon {
				width: 20px;
				height: 20px;
				color: #f2b705;
			}

			.contact-item-text {
				font-size: 1rem;
			}

			.contact-item-text a {
				color: #f2b705;
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.contact-item-text a:hover {
				color: #f2991b;
			}

			/* Contact Form */
			.contact-form {
				background: #000;
				padding: 2rem;
				border-radius: 10px;
				border: 1px solid #333;
			}

			.form-group {
				margin-bottom: 1.5rem;
			}

			.form-group label {
				display: block;
				margin-bottom: 0.5rem;
				color: #f2b705;
				font-weight: bold;
			}

			.form-group input,
			.form-group textarea {
				width: 100%;
				padding: 0.8rem;
				background: #111;
				border: 1px solid #333;
				border-radius: 5px;
				color: white;
				font-family: 'Lacquer', sans-serif;
				font-size: 1rem;
				transition: border-color 0.3s ease;
			}

			.form-group input:focus,
			.form-group textarea:focus {
				outline: none;
				border-color: #f2b705;
			}

			.form-group textarea {
				resize: vertical;
				min-height: 120px;
			}

			.submit-btn {
				width: 100%;
				padding: 1rem;
				background: #f2b705;
				color: #000;
				border: none;
				border-radius: 5px;
				font-family: 'Lacquer', sans-serif;
				font-size: 1.1rem;
				font-weight: bold;
				cursor: pointer;
				transition: all 0.3s ease;
			}

			.submit-btn:hover {
				background: #f2991b;
				transform: translateY(-2px);
				box-shadow: 0 5px 15px rgba(242, 183, 5, 0.3);
			}

			.submit-btn:disabled {
				background: #666;
				cursor: not-allowed;
				transform: none;
				box-shadow: none;
			}

			/* Social Media Section */
			.social-section {
				padding: 3rem 2rem;
				background: #000;
				text-align: center;
			}

			.social-grid {
				display: flex;
				justify-content: center;
				gap: 2rem;
				max-width: 600px;
				margin: 0 auto;
			}

			.social-link {
				display: flex;
				align-items: center;
				justify-content: center;
				width: 60px;
				height: 60px;
				border: 2px solid #f2b705;
				border-radius: 50%;
				color: #f2b705;
				text-decoration: none;
				font-size: 1.5rem;
				transition: all 0.3s ease;
			}

			.social-link:hover {
				background: #f2b705;
				color: #000;
				transform: translateY(-3px);
				box-shadow: 0 5px 15px rgba(242, 183, 5, 0.3);
			}

			/* Footer */
			.footer {
				background: #111;
				padding: 3rem 2rem 2rem;
				text-align: center;
				border-top: 1px solid #333;
			}

			.footer-content {
				max-width: 1200px;
				margin: 0 auto;
			}

			.footer-links {
				display: flex;
				justify-content: center;
				gap: 2rem;
				margin-bottom: 2rem;
				flex-wrap: wrap;
			}

			.footer-links a {
				color: #f2b705;
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.footer-links a:hover {
				color: #f2991b;
			}

			.copyright {
				color: #666;
				font-size: 0.9rem;
			}

			/* Mobile Navigation */
			.mobile-menu-btn {
				display: none;
				background: none;
				border: none;
				color: white;
				font-size: 1.5rem;
				cursor: pointer;
			}

			/* Success/Error Messages */
			.message {
				padding: 1rem;
				border-radius: 5px;
				margin-bottom: 1rem;
				text-align: center;
			}

			.message.success {
				background: rgba(34, 197, 94, 0.1);
				border: 1px solid #22c55e;
				color: #22c55e;
			}

			.message.error {
				background: rgba(239, 68, 68, 0.1);
				border: 1px solid #ef4444;
				color: #ef4444;
			}

			/* Responsive */
			@media (max-width: 768px) {
				.nav-links {
					display: none;
				}

				.mobile-menu-btn {
					display: block;
				}

				.section-title {
					font-size: 2.5rem;
				}

				.hero {
					height: 20vh;
					padding: 0 1rem;
				}

				.contact-section,
				.social-section {
					padding: 3rem 1rem;
				}

				.contact-grid {
					grid-template-columns: 1fr;
					gap: 2rem;
				}

				.social-grid {
					flex-wrap: wrap;
					gap: 1rem;
				}

				.social-link {
					width: 50px;
					height: 50px;
					font-size: 1.2rem;
				}

				.footer-links {
					flex-direction: column;
					gap: 1rem;
				}
			}
		</style>
	</head>
