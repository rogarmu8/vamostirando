---
// Astro component frontmatter
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>Vamos Tirando - Ordago Films</title>
		<meta name="description" content="Una comedia negra sobre la generación que lo tiene todo... menos futuro." />
		<style>
			@font-face {
				font-family: 'Owned';
				src: url('/fonts/owned.ttf') format('truetype');
				font-weight: normal;
				font-style: normal;
			}

			@font-face {
				font-family: 'SpriteGraffiti';
				src: url('/fonts/Sprite Graffiti.otf') format('opentype');
				font-weight: normal;
				font-style: normal;
			}

			@font-face {
				font-family: 'Lacquer';
				src: url('/fonts/Lacquer-Regular.ttf') format('truetype');
				font-weight: normal;
				font-style: normal;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: 'Lacquer', sans-serif;
				background: #000;
				color: white;
				overflow-x: hidden;
			}

			/* Navigation */
			.nav {
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				z-index: 1000;
				background: rgba(0, 0, 0, 0.9);
				backdrop-filter: blur(10px);
				padding: 1rem 0;
				transition: all 0.3s ease;
			}

			.nav.hidden {
				transform: translateY(-100%);
			}

			.nav-container {
				max-width: 1200px;
				margin: 0 auto;
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 0 2rem;
			}

			.logo {
				font-family: 'SpriteGraffiti', sans-serif;
				font-size: 1.5rem;
				color: #f2b705;
				text-decoration: none;
			}

			.nav-links {
				display: flex;
				gap: 2rem;
				list-style: none;
			}

			.nav-links a {
				color: white;
				text-decoration: none;
				font-size: 1rem;
				transition: color 0.3s ease;
			}

			.nav-links a:hover {
				color: #f2b705;
			}

			/* Hero Section */
			.hero {
				min-height: 100vh;
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				text-align: center;
				background: linear-gradient(135deg, #000 0%, #1a1a1a 100%);
				position: relative;
				padding: 2rem 0;
			}

			.hero::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background-image: url('/img/bg.svg');
				background-size: cover;
				background-position: center;
				opacity: 0.3;
				z-index: -1;
			}

			.hero-content {
				max-width: 1000px;
				padding: 0 0rem;
				z-index: 1;
			}

			.main-title {
				width: 100%;
				max-width: 800px;
				height: auto;
				margin-bottom: -2rem;
			}

			.tagline {
				font-size: 1.5rem;
				line-height: 1.4;
				margin-top: 2rem;
				text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
			}

			.subtitle {
				width: 100%;
				max-width: 200px;
				height: auto;
				margin-top: -2rem;
				margin-bottom: 1rem;
				filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.3)) invert(1);
			}

			.cta-buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}

			.btn {
				padding: 1rem 2rem;
				border: 2px solid #f2b705;
				background: transparent;
				color: #f2b705;
				text-decoration: none;
				font-family: 'Lacquer', sans-serif;
				font-size: 1.1rem;
				border-radius: 5px;
				transition: all 0.3s ease;
				cursor: pointer;
			}

			.btn:hover {
				background: #f2b705;
				color: #000;
				transform: translateY(-2px);
				box-shadow: 0 5px 15px rgba(242, 183, 5, 0.3);
			}

			.btn-primary {
				background: #f2b705;
				color: #000;
			}

			.btn-primary:hover {
				background: #f2991b;
				border-color: #f2991b;
			}

			/* Video Container */
			.video-container {
				max-width: 600px;
				margin: 1rem auto;
				aspect-ratio: 16/9;
				border-radius: 10px;
				overflow: hidden;
				box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
			}

			/* CTA Section */
			.cta-section {
				padding: 3rem 2rem;
				background: #111;
				text-align: center;
			}

			.video-container iframe {
				width: 100%;
				height: 100%;
				border: none;
			}

			/* Info Section */
			.info-section {
				padding: 5rem 2rem;
				background: #000;
			}

			.info-grid {
				max-width: 1200px;
				margin: 0 auto;
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 3rem;
			}

			.info-card {
				text-align: center;
				padding: 2rem;
				background: #111;
				border-radius: 10px;
				border: 1px solid #333;
				transition: transform 0.3s ease;
			}

			.info-card:hover {
				transform: translateY(-5px);
				border-color: #f2b705;
			}

			.info-card h3 {
				font-family: 'SpriteGraffiti', sans-serif;
				font-size: 1.8rem;
				color: #f2b705;
				margin-bottom: 1rem;
			}

			.info-card p {
				line-height: 1.6;
				font-size: 1rem;
			}

			/* Footer */
			.footer {
				background: #111;
				padding: 3rem 2rem 2rem;
				text-align: center;
				border-top: 1px solid #333;
			}

			.footer-content {
				max-width: 1200px;
				margin: 0 auto;
			}

			.footer-links {
				display: flex;
				justify-content: center;
				gap: 2rem;
				margin-bottom: 2rem;
				flex-wrap: wrap;
			}

			.footer-links a {
				color: #f2b705;
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.footer-links a:hover {
				color: #f2991b;
			}

			.copyright {
				color: #666;
				font-size: 0.9rem;
			}

			/* Mobile Navigation */
			.mobile-menu-btn {
				display: none;
				background: none;
				border: none;
				color: white;
				font-size: 1.5rem;
				cursor: pointer;
			}

			/* Responsive */
			@media (max-width: 768px) {
				.nav-links {
					display: none;
				}

				.mobile-menu-btn {
					display: block;
				}

				.hero-content {
					padding: 0 1rem;
				}

				.main-title {
					max-width: 95vw;
					transform: scale(1.2);
				}

				.subtitle {
					max-width: 70vw;
				}

				.tagline {
					font-size: 1.2rem;
				}

				.cta-buttons {
					flex-direction: column;
					align-items: center;
				}

				.btn {
					width: 100%;
					max-width: 300px;
				}

				.section-title {
					font-size: 2rem;
				}

				.cta-section,
				.info-section {
					padding: 3rem 1rem;
				}

				.video-container {
					max-width: 90vw;
					margin: 1.5rem auto;
				}

				.info-grid {
					grid-template-columns: 1fr;
					gap: 2rem;
				}

				.footer-links {
					flex-direction: column;
					gap: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<!-- Navigation -->
		<nav class="nav" id="nav">
			<div class="nav-container">
				<a href="/" class="logo">Vamos Tirando</a>
				<ul class="nav-links">
					<li><a href="/">Inicio</a></li>
					<li><a href="/equipo">Equipo</a></li>
					<li><a href="/sobre-el-proyecto">Sobre el Proyecto</a></li>
					<li><a href="/contacto">Contacto</a></li>
				</ul>
				<button class="mobile-menu-btn">☰</button>
			</div>
		</nav>

		<!-- Hero Section -->
		<section class="hero">
			<div class="hero-content">
				<img src="/img/title.svg" alt="Vamos Tirando" class="main-title" />
				<div class="video-container">
					<iframe 
						src="https://www.youtube.com/embed/hIvpvP1-UZQ" 
						title="Vamos Tirando - Teaser" 
						allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
						allowfullscreen>
					</iframe>
				</div>
				<p class="tagline">Una comedia negra sobre la generación que lo tiene todo... menos futuro.</p>
				<img src="/img/ordago.svg" alt="Órdago Films" class="subtitle" />
			</div>
		</section>

		<!-- Footer -->
		<footer class="footer">
			<div class="footer-content">
				<div class="footer-links">
					<a href="/">Inicio</a>
					<a href="/equipo">Equipo</a>
					<a href="/sobre-el-proyecto">Sobre el Proyecto</a>
					<a href="/contacto">Contacto</a>
				</div>
				<p class="copyright">©2025 Vamos Tirando - Ordago Films. Todos los derechos reservados.</p>
			</div>
		</footer>

		<script>
			// Navigation scroll effect
			window.addEventListener('scroll', () => {
				const nav = document.getElementById('nav');
				if (window.scrollY > 100) {
					nav?.classList.add('hidden');
				} else {
					nav?.classList.remove('hidden');
				}
			});

			// Smooth scrolling for anchor links
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', (e: Event) => {
					e.preventDefault();
					const href = (e.target as HTMLAnchorElement).getAttribute('href');
					if (href) {
						const target = document.querySelector(href);
						if (target) {
							target.scrollIntoView({
								behavior: 'smooth',
								block: 'start'
							});
						}
					}
				});
			});
		</script>
	</body>
</html>
