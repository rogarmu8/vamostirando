<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>Vamos Tirando - Ordago Films</title>
		<style>
			@font-face {
				font-family: 'Owned';
				src: url('/fonts/owned.ttf') format('truetype');
				font-weight: normal;
				font-style: normal;
			}

			@font-face {
				font-family: 'SpriteGraffiti';
				src: url('/fonts/Sprite Graffiti.otf') format('opentype');
				font-weight: normal;
				font-style: normal;
			}

			@font-face {
				font-family: 'Lacquer';
				src: url('/fonts/Lacquer-Regular.ttf') format('truetype');
				font-weight: normal;
				font-style: normal;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: 'Arial', sans-serif;
				overflow-x: hidden;
				background: #000;
			}

			.background {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				z-index: -1;
				background-image: url('/img/bg.svg');
				background-size: cover;
				background-position: center;
				background-repeat: no-repeat;
			}

			.container {
				position: relative;
				min-height: 400vh;
				overflow: hidden;
			}

			.hero-section {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100vh;
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				z-index: 3;
				transition: all 0.8s ease-out;
			}

			.hero-section.hidden {
				top: -100vh;
				z-index: 0;
			}

			.title-container {
				text-align: center;
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
			}

			.main-title {
				width: 90vw;
				max-width: 1000px;
				height: auto;
			}

			.subtitle {
				width: 70vw;
				max-width: 500px;
				height: auto;
				margin-top: -9rem;
			}

			.teaser-section {
				position: fixed;
				top: 100vh;
				left: 0;
				width: 100%;
				height: 100vh;
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				z-index: 2;
				transition: all 0.8s ease-out;
				opacity: 0;
			}

			.teaser-section.visible {
				top: 0;
				opacity: 1;
			}

			.teaser-section.hidden {
				top: -100vh;
				z-index: 0;
				opacity: 0;
			}

			.video-container {
				width: 80vw;
				max-width: 800px;
				aspect-ratio: 16/9;
				margin-bottom: 1rem;
				border-radius: 8px;
				overflow: hidden;
				box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
			}

			.video-container iframe {
				width: 100%;
				height: 100%;
				border: none;
			}

			.verkami-link {
				font-family: 'Lacquer', sans-serif;
				font-size: 1.5rem;
				color: #f2b705;
				text-decoration: underline;
				margin-top: 2rem;
				text-align: center;
				transition: all 0.3s ease;
				animation: breathing 3s ease-in-out infinite;
			}

			.verkami-link:hover {
				animation: none;
				transform: scale(1.05);
				color: #f2991b;
			}

			.log-line {
				font-family: 'Lacquer', sans-serif;
				font-size: 2rem;
				color: white;
				text-align: center;
				max-width: 600px;
				line-height: 1.4;
				text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
				padding-bottom: 2rem;
			}

			.group-section {
				position: fixed;
				top: 100vh;
				left: 0;
				width: 100%;
				height: 100vh;
				display: flex;
				justify-content: center;
				align-items: center;
				z-index: 1;
				transition: all 0.8s ease-out;
				opacity: 0;
			}

			.group-section.visible {
				top: 0;
				opacity: 1;
				z-index: 4;
			}

			.group-content {
				position: relative;
				display: flex;
				align-items: center;
				gap: 3rem;
				max-width: 1400px;
				width: 90vw;
			}

			.group-image {
				width: 70%;
				max-width: 1000px;
				height: auto;
				pointer-events: none;
			}

			.nav-button {
				font-family: 'SpriteGraffiti', sans-serif;
				font-size: 3rem;
				color: #f2b705;
				text-decoration: none;
				cursor: pointer;
				transition: all 0.3s ease;
				text-shadow: 0 2px 4px rgba(0, 0, 0, 0.4);
				display: inline-block;
				position: relative;
				z-index: 30;
				pointer-events: all;
				animation: breathing 3s ease-in-out infinite;
			}

			.nav-button:hover, .verkami-link:hover {
				animation: none;
				transform: scale(1.05);
				color: #f2991b;
			}

			.scroll-indicator {
				position: fixed;
				bottom: 2rem;
				left: 50%;
				transform: translateX(-50%);
				color: white;
				font-size: 1.2rem;
				opacity: 0.8;
				animation: bounce 2s infinite;
				z-index: 15;
				font-family: 'Lacquer', sans-serif;
			}

			@keyframes bounce {
				0%, 20%, 50%, 80%, 100% {
					transform: translateX(-50%) translateY(0);
				}
				40% {
					transform: translateX(-50%) translateY(-10px);
				}
				60% {
					transform: translateX(-50%) translateY(-5px);
				}
			}

			@keyframes breathing {
				0%, 100% {
					transform: scale(1);
					opacity: 0.8;
				}
				50% {
					transform: scale(1.05);
					opacity: 1;
				}
			}

			@media (max-width: 768px) {
				.main-title {
					width: 95vw;
				}
				
				.subtitle {
					width: 85vw;
					margin-top: -5rem;
				}

				.title-container {
					margin-top: 5rem;
				}

				.video-container {
					width: 95vw;
				}

				.log-line {
					font-size: 1.2rem;
					padding: 0 1rem 1rem 1rem;
				}

				.verkami-link {
					font-size: 1.1rem;
				}

				.group-content {
					flex-direction: column;
					gap: 2rem;
				}

				.group-image {
					width: 100%;
				}

				.nav-button {
					font-size: 1.5rem;
				}

				.scroll-indicator {
					font-size: 0.9rem;
					bottom: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<div class="background"></div>
		
		<div class="container">
			<div class="hero-section" id="heroSection">
				<div class="title-container">
					<img src="/img/title.svg" alt="Vamos Tirando" class="main-title" />
					<img src="/img/ordago.svg" alt="Ordago Films" class="subtitle" />
				</div>
			</div>
			
			<div class="teaser-section" id="teaserSection">
				<p class="log-line">Una comedia negra sobre la generación que lo tiene todo... menos futuro.</p>
				<div class="video-container">
					<iframe width="560" height="315" src="https://www.youtube.com/embed/hIvpvP1-UZQ" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
				</div>
				<a href="https://vkm.is/vamostirando" target="_blank" class="verkami-link">€€€ <br> Apoya el proyecto en Verkami <br> €€€</a>
			</div>
			
			<div class="group-section" id="groupSection">
				<div class="group-content">
					<img src="/img/group.svg" alt="Group" class="group-image" />
					<a href="/personajes" class="nav-button">Conoce a los personajes</a>
				</div>
			</div>
		</div>

		<div class="scroll-indicator"> ↓ Continuar ↓ </div>

		<script>
			document.addEventListener('DOMContentLoaded', function() {
				const heroSection = document.getElementById('heroSection') as HTMLElement;
				const teaserSection = document.getElementById('teaserSection') as HTMLElement;
				const groupSection = document.getElementById('groupSection') as HTMLElement;
				const scrollIndicator = document.querySelector('.scroll-indicator') as HTMLElement;
				
				if (!heroSection || !teaserSection || !groupSection || !scrollIndicator) {
					console.error('Required elements not found');
					return;
				}
				
				let lastScrollY = window.scrollY;
				let ticking = false;

				function updateScroll() {
					const scrollY = window.scrollY;
					const windowHeight = window.innerHeight;
					const scrollProgress = scrollY / windowHeight;
					
					// Handle hero section
					if (scrollProgress <= 0.5) {
						heroSection.classList.remove('hidden');
						heroSection.style.opacity = (1 - scrollProgress * 2).toString();
					} else {
						heroSection.classList.add('hidden');
						heroSection.style.opacity = '0';
					}
					
					// Handle teaser section
					if (scrollProgress >= 0.6 && scrollProgress < 2.0) {
						teaserSection.classList.add('visible');
						teaserSection.classList.remove('hidden');
					} else if (scrollProgress >= 2.0) {
						teaserSection.classList.add('hidden');
						teaserSection.classList.remove('visible');
					} else {
						teaserSection.classList.remove('visible', 'hidden');
					}
					
					// Handle group section
					if (scrollProgress >= 2.0) {
						groupSection.classList.add('visible');
					} else {
						groupSection.classList.remove('visible');
					}
					
					// Hide scroll indicator after scrolling starts
					if (scrollY > 100) {
						scrollIndicator.style.opacity = '0';
					} else {
						scrollIndicator.style.opacity = '0.8';
					}
					
					lastScrollY = scrollY;
					ticking = false;
				}

				function requestTick() {
					if (!ticking) {
						requestAnimationFrame(updateScroll);
						ticking = true;
					}
				}

				window.addEventListener('scroll', requestTick);
				
				// Initial call
				updateScroll();
			});
		</script>
	</body>
</html>
